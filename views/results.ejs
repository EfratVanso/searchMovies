<body style="background-image: linear-gradient(to bottom right,#00aaff, #00ff55);">
    <title>Search Movies</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
    integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
    crossorigin="anonymous"/>
 </head>
 <div class="jumbotron p-3" style="background-color: transparent;">
    <h1> Results For "<%= query %>"</h1>
        </div>
<div class="container-fluid">
    
<div class="row">
    
<% data["Search"].forEach(function(movie) { %>
    <div class="col-3 p-3 d-flex align-items-center"">
    <div class="card " style="width: 18rem;">
        <h6 class="card-title"><%= movie["Title"] %></h6>
        <div class="card-body">
    <img style="max-width: 80%;" class="img-thumbnail" src=" <%= movie['Poster'] %> " >
        </div>    
</div>
</div>
<% }) %>

 </div>

 <div class="row">
    <div class="col-5"></div>
        <div class="col-2">
<a href="/" class=" btn text-white btn-outline-secondary bg-primary mb-5"> search again</a>
</div>
</div>



</div>
<script
      src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>
</body>

<style>
    .card {
    border: solid dodgerblue;
    border-radius: 4%;
    align-content: center;
    text-align: center;
}
</style>
